{% extends 'base.html.twig' %}

{% block title %}Restaurent index{% endblock %}

{% block body %}
    <h1>Restaurent index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Adress</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for restaurent in restaurents %}
            <tr>
                <td>{{ restaurent.id }}</td>
                <td>{{ restaurent.nom }}</td>
                <td>{{ restaurent.adress }}</td>
                <td>
                    <a href="{{ path('app_restaurent_show', {'id': restaurent.id}) }}">show</a>
                    <a href="{{ path('app_restaurent_edit', {'id': restaurent.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_restaurent_new') }}">Create new</a>
{% endblock %}
